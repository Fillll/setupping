# PostgreSQL
POSTGRES_DB=n8n
POSTGRES_USER=n8n_user
POSTGRES_PASSWORD=your_postgres_password_here

# MongoDB
MONGO_USER=mongo_admin
MONGO_PASSWORD=your_mongo_password_here

# n8n
N8N_USER=admin
N8N_PASSWORD=your_n8n_password_here

# Public Domain Configuration (optional - for internet access)
# Set this to your actual domain name (e.g., n8n.yourdomain.com)
# If not set, defaults to n8n.example.com
N8N_DOMAIN=n8n.example.com

# Cloudflare Configuration (for DNS challenge)
# Get your API token from: https://dash.cloudflare.com/profile/api-tokens
# Create a token with: Zone.DNS (Edit) permission for your zone
CLOUDFLARE_EMAIL=user@example.com
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# Cloudflare Tunnel (for internet access without port forwarding)
# Create a tunnel at: https://one.dash.cloudflare.com/ → Networks → Tunnels
# Copy the tunnel token after creating the tunnel
CLOUDFLARE_TUNNEL_TOKEN=your_cloudflare_tunnel_token_here
